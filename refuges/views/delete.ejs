<%- include("header") -%>

<h1>Supprimer un refuge</h1>

<form method="post">
    <div class="form-horizontal">

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="name">Nom</label>
            <div class="col-sm-8">
                <input readonly class="form-control" id="name" value="<%= refuge.name %>" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2" for="adress">Adresse</label>
            <div class="col-sm-7">
                <input readonly class="form-control" id="adress" value="<%= refuge.adress %>" />
            </div>
        </div>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Supprimer" class="btn btn-default btn-danger" />
                <a class="btn btn-outline-dark cancel" href="/refuges/<%= refuge.id %>">Annuler</a>
            </div>
        </div>
    </div>
</form>

<%- include("footer") -%>