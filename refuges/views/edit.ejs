<%- include("header") -%>

<h1>Modifier les informations du refuge</h1>

<form method="post">
    <div class="form-horizontal">

        <%- include("editor") -%>

        <div class="form-group row">
            <label class="col-form-label col-sm-2"></label>
            <div class="col-sm-10">
                <input type="submit" value="Update" class="btn btn-default btn-warning" />
